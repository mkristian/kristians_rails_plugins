class Views::Layouts::Page < Erector::Widget
  def initialize(view, assigns, title = self.class.name)
    super(view, assigns)
    @title = title
  end

  def render
    instruct
    html :xmlns => "http://www.w3.org/1999/xhtml" do
      head do
        title "Sahyadri - #{@title}"
        #css "sahyadri.css"
      end
      body do
        div :class => 'header' do
          render_header
        end
        div :class => 'body' do
          render_body
        end
        div :class => 'footer' do
          render_footer
        end
      end
    end
  end

  def render_header
    div :id => :header do
      a "MyApp Home", :href => "/"
    end
  end

  def render_body 
    div "This page intentionally left blank.", :id => :body
  end

  def render_footer
    div "Copyright (c) 2008, Sahyadri School KFI", :id => :footer
  end
end
