require File.dirname(__FILE__) + '<%= '/..' * class_nesting_depth %>/../test_helper'

class <%= controller_class_name %>ControllerTest < ActionController::TestCase

  def test_should_get_index
    login_as_with_role :root, :root
    get :index
    assert_response :success
    assert_not_nil assigns(:<%= table_name %>)
  end

  def test_should_get_new
    login_as_with_role :root, :root
    get :new
    assert_response :success
  end

  def test_should_create_<%= file_name %>
    login_as_with_role :root, :root
    assert_difference('<%= class_name %>.count') do
      post :create, :<%= file_name %> => {
        <% first = true
       for attribute in attributes 
       if first
         first = false 
       else
        -%><%= "," %><% end -%> :<%= attribute.name %> => <% if attribute.type == :string || attribute.type == :text -%><%= "\"" + attribute.default  + "\"" %><% else -%><%= attribute.default %><% end -%>
<% end -%>

      }
    end

    assert_redirected_to <%= file_name %>_path(assigns(:<%= file_name %>).id)
  end

  def test_should_not_create_<%= file_name %>
    login_as_with_role :root, :root
    assert_no_difference('<%= class_name %>.count') do
      post :create, :<%= file_name %> => { }
    end

    assert_response :success
  end

  def test_should_show_<%= file_name %>
    login_as_with_role :root, :root
    get :show, :id => <%= table_name %>(:one).id
    assert_response :success
  end

  def test_should_get_edit
    login_as_with_role :root, :root
    get :edit, :id => <%= table_name %>(:one).id
    assert_response :success
  end

  def test_should_update_<%= file_name %>
    login_as_with_role :root, :root
    put :update, :id => <%= table_name %>(:one).id, :<%= file_name %> => { }
    assert_redirected_to <%= file_name %>_path(assigns(:<%= file_name %>).id)
  end

  def test_should_not_update_<%= file_name %>
    login_as_with_role :root, :root
    put :update, :id => <%= table_name %>(:one).id, :<%= file_name %> => {
<% first = true
       for attribute in attributes 
       if first
         first = false 
       else
        -%><%= "," %><% end -%> :<%= attribute.name %> => nil<% end -%>

      }
    assert_response :success
  end

  def test_should_destroy_<%= file_name %>
    login_as_with_role :root, :root
    assert_difference('<%= class_name %>.count', -1) do
      delete :destroy, :id => <%= table_name %>(:two).id
    end

    assert_redirected_to <%= table_name %>_path
  end
end
